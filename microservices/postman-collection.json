{
  "info": {
    "name": "Microsserviços API",
    "description": "Coleção para testar a arquitetura de microsserviços",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "gateway_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "auth_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Gateway Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_url}}/health",
              "host": ["{{gateway_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Dados Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/health",
              "host": ["http://localhost:3001"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Auth Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3002/health",
              "host": ["http://localhost:3002"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Autenticação",
      "item": [
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{gateway_url}}/api/v1/auth/login",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Registro Usuário",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"novo@example.com\",\n  \"password\": \"123456\",\n  \"name\": \"Novo Usuário\"\n}"
            },
            "url": {
              "raw": "{{gateway_url}}/api/v1/auth/register",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Validar Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{gateway_url}}/api/v1/auth/validate",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "auth", "validate"]
            }
          }
        }
      ]
    },
    {
      "name": "Projetos",
      "item": [
        {
          "name": "Listar Projetos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_url}}/api/v1/projects",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "projects"]
            }
          }
        },
        {
          "name": "Criar Projeto",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('project_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Projeto de Teste\",\n  \"description\": \"Descrição do projeto de teste\",\n  \"status\": \"ativo\"\n}"
            },
            "url": {
              "raw": "{{gateway_url}}/api/v1/projects",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "projects"]
            }
          }
        },
        {
          "name": "Buscar Projeto por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_url}}/api/v1/projects/{{project_id}}",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "projects", "{{project_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Tarefas",
      "item": [
        {
          "name": "Criar Tarefa",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tarefa de Teste\",\n  \"description\": \"Descrição da tarefa\",\n  \"assignedTo\": \"user-123\",\n  \"dueDate\": \"2024-12-31\"\n}"
            },
            "url": {
              "raw": "{{gateway_url}}/api/v1/projects/{{project_id}}/tasks",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "projects", "{{project_id}}", "tasks"]
            }
          }
        },
        {
          "name": "Listar Tarefas do Projeto",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_url}}/api/v1/projects/{{project_id}}/tasks",
              "host": ["{{gateway_url}}"],
              "path": ["api", "v1", "projects", "{{project_id}}", "tasks"]
            }
          }
        }
      ]
    }
  ]
}